<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="ImageConverter.Views.ConvertToASCIIPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageConverter.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:Microsoft.Xaml.Interactions.Core"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='2' x:Name="CommandBarGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Панель  инмтрументов -->
            <StackPanel Orientation="Horizontal">
                <CommandBar IsOpen="False"
                            DefaultLabelPosition="Right"
                            FlowDirection="LeftToRight">
                    <AppBarButton x:ConnectionId='10'
                        Icon="Add"
                        Label="Add"
                                                               >
                        <KeyboardAccelerator Modifiers="Control" Key="O"/>
                    </AppBarButton>

                    <AppBarButton x:ConnectionId='11' Icon="Save"
                                  Label="Save"
                                                                               >
                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                    </AppBarButton>
                </CommandBar>
            </StackPanel>

            <!--<StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <CommandBar DefaultLabelPosition="Right">
                    <AppBarButton Icon="Cancel"
                          Label="Cancel">
                        <KeyboardAccelerator Modifiers="Control" Key="Q"/>
                    </AppBarButton>
                </CommandBar>
            </StackPanel>-->
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.35*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Область вывода ASCII арта -->
            <ScrollViewer x:ConnectionId='3' Style="{StaticResource ScrollViewerStyle}"
                          HorizontalScrollBarVisibility="Auto"
                          x:Name="ContentScrollViewer">
                <RichTextBlock>
                    <Paragraph>
                        Здесь отобразиться ваш ASCII арт
                    </Paragraph>
                </RichTextBlock>
            </ScrollViewer>
            
            <!-- Панель натсроек -->
            <StackPanel x:ConnectionId='4' x:Name="SettingsPanel"
                        Grid.Column="1"
                        Orientation="Vertical"
                        Margin="0 12 12 12"
                        Spacing="5">

                <TextBlock
                    Text="Параметры преобразования"
                    Style="{StaticResource BodyStrongTextBlockStyle}"/>

                <labs:SettingsCard
                    Header="Размер (%)"
                    Description="Задаёт размер итогового изображения исходя из загруженного изображения"
                    ContentAlignment="Right">

                    <Slider x:ConnectionId='9'
                        Width="350"
                        MinWidth="100"
                        Maximum="100"
                        Minimum="10"
                        StepFrequency="1"
                                                                           >

                    </Slider>
                </labs:SettingsCard>

                <labs:SettingsCard
                    Header="Смещение"
                    Description="Задаёт показатель, влияющий на изменение пропорций изображения"
                    HorizontalContentAlignment="Stretch">

                    <Slider x:ConnectionId='8' x:Name="WidthOffset"
                            Width="350"
                            MinWidth="100"
                            Maximum="10"
                            Minimum="1"
                            StepFrequency="0.1"
                                                                               >

                    </Slider>
                </labs:SettingsCard>

                <labs:SettingsCard Header="Инверсия"
                                   Description="Инвертирует итоговый арт, делая светлые области тёмными и наоборот. Включите, если арт будет располагаться на светлом фоне">
                    <labs:SettingsCard.Resources>
                        <x:Double x:Key="SettingsCardWrapThreshold">450</x:Double>
                    </labs:SettingsCard.Resources>
                    
                    <ToggleSwitch x:ConnectionId='7' HorizontalAlignment="Right"
                                                                                     >
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Откл - лучше для тёмного фона
                                              Вкл - лучше для светлого фона"/>
                        </ToolTipService.ToolTip>
                    </ToggleSwitch>
                </labs:SettingsCard>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:ConnectionId='5' Grid.Column="0" 
                            HorizontalAlignment="Stretch"
                            Content="Генерировать"
                                                                             
                            Margin="0 0 5 0"
                            Style="{StaticResource AccentButtonStyle}"/>
                    
                    <Button x:ConnectionId='6' Grid.Column="1" 
                            HorizontalAlignment="Stretch"
                            Content="Сбросить"
                                                                             
                            Background="#f56c7a"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

