<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="ImageConverter.Views.ConvertToASCIIPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageConverter.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:Microsoft.Xaml.Interactions.Core"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary Source="../Styles/ButtonStyles.xaml"/>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- Панель  инмтрументов -->
        <StackPanel Orientation="Horizontal">
            <CommandBar IsOpen="False"
                        DefaultLabelPosition="Right"
                        FlowDirection="LeftToRight">
                <AppBarButton x:ConnectionId='11'
                        Icon="Add"
                        Label="Add"
                                                               
                        KeyboardAcceleratorPlacementMode="Auto">
                    
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="O"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>

                <AppBarButton x:ConnectionId='12' Icon="Save"
                              Label="Save"
                                                                      >

                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
            </CommandBar>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.35*"/>
            </Grid.ColumnDefinitions>

            <!-- Область вывода ASCII арта -->
            <Grid>
                <ScrollViewer x:ConnectionId='9' Style="{StaticResource ScrollViewerStyle}"
                              x:Name="ContentScrollViewer"
                              ZoomMode="Enabled"
                              HorizontalScrollMode="Auto"
                              VerticalScrollMode="Auto"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">

                    <TextBlock x:ConnectionId='10'                                                 TextWrapping="WrapWholeWords" FontFamily="Consolas" IsTextSelectionEnabled="True"/>
                </ScrollViewer>
            </Grid>
            
            <!-- Панель натсроек -->
            <StackPanel x:ConnectionId='3' x:Name="SettingsPanel"
                        Grid.Column="1"
                        Orientation="Vertical"
                        Margin="0 12 12 12"
                        Spacing="5">

                <labs:SettingsCard Header="Размер (%)"
                                   Description="Задаёт размер итогового арта исходя из загруженного изображения"
                                   ContentAlignment="Right">

                    <Slider x:ConnectionId='8' x:Name="SizeSlider"
                            Maximum="100"
                            Minimum="10"
                            StepFrequency="1"
                                                                               
                            Width="350">
                    </Slider>
                </labs:SettingsCard>

                <labs:SettingsCard Header="Смещение"
                                   Description="Задаёт кратность уменьшения высоты итогового арта"
                                   HorizontalContentAlignment="Stretch">

                    <Slider x:ConnectionId='7' x:Name="WidthOffsetSlider"
                            Maximum="10"
                            Minimum="1"
                            StepFrequency="0.1"
                                                                               
                            Width="350">

                    </Slider>
                </labs:SettingsCard>

                <labs:SettingsCard Header="Инверсия"
                                   Description="Инвертирует итоговый арт, делая светлые области тёмными и наоборот. Включите, если арт будет располагаться на светлом фоне">
                    <labs:SettingsCard.Resources>
                        <x:Double x:Key="SettingsCardWrapThreshold">450</x:Double>
                    </labs:SettingsCard.Resources>

                    <ToggleSwitch x:ConnectionId='6' HorizontalAlignment="Right"
                                                                                     >
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Откл - лучше для тёмного фона
                                              Вкл - лучше для светлого фона"/>
                        </ToolTipService.ToolTip>
                    </ToggleSwitch>
                </labs:SettingsCard>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:ConnectionId='4' Grid.Column="0" 
                            HorizontalAlignment="Stretch"
                            Content="Генерировать"
                                                                             
                            Margin="0 0 5 0"
                            Style="{StaticResource AccentButtonStyle}"/>

                    <Button x:ConnectionId='5' Grid.Column="1" 
                            Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Content="Сбросить"
                                                                             />
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Панель статуса -->
        <StackPanel Orientation="Horizontal"
                    Height="auto"
                    Grid.Row="2"
                    Padding="5"
                    Margin="12 0 0 0"
                    CornerRadius="8 0 0 8"
                    Background="{StaticResource LayerFillColorAltBrush}">

            <TextBlock Text="Файл: "/>
            <TextBlock x:ConnectionId='2'                                                 />
        </StackPanel>
    </Grid>
</Page>

